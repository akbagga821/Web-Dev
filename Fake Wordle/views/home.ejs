<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wordle Form</title>
</head>
<body>
    
    <form action="wordfinder" onsubmit="return false">
        <label for="l1">First Letter</label>
        <input id="l1" name="l1" type="text"><br>
        <label for="colors1">Choose a color:</label>
        <select name="colors1" id="colors1">
            <option value="green">Green</option>
            <option value="yellow">Yellow</option>
            <option value="gray">Gray</option>
        </select>
        <br><br>

        <label for="l2">Second Letter</label>
        <input id="l2" name="l2" type="text"><br>
        <label for="colors2">Choose a color:</label>
        <select name="colors2" id="colors2">
            <option value="green">Green</option>
            <option value="yellow">Yellow</option>
            <option value="gray">Gray</option>
        </select>
        <br><br>
        
        <label for="l3">Third Letter</label>
        <input id="l3" name="l3" type="text"><br>
        <label for="colors3">Choose a color:</label>
        <select name="colors3" id="colors3">
            <option value="green">Green</option>
            <option value="yellow">Yellow</option>
            <option value="gray">Gray</option>
        </select>
        <br><br>
        
        <label for="l4">Fourth Letter</label>
        <input id="l4" name="l4" type="text"><br>
        <label for="colors4">Choose a color:</label>
        <select name="colors4" id="colors4">
            <option value="green">Green</option>
            <option value="yellow">Yellow</option>
            <option value="gray">Gray</option>
        </select>
        <br><br>

        <label for="l5">Fifth Letter</label>
        <input id="l5" name="l5" type="text"><br>
        <label for="colors5">Choose a color:</label>
        <select name="colors5" id="colors5">
            <option value="green">Green</option>
            <option value="yellow">Yellow</option>
            <option value="gray">Gray</option>
        </select>
        <br><br>
        <button type="button" onclick="doTheFetch()">PRESS ME</button>
    </form>
    <p id='words'></p>
    <script>
        async function doTheFetch() {
            let c1 = document.getElementById("colors1")
            let c2 = document.getElementById("colors2")
            let c3 = document.getElementById("colors3")
            let c4 = document.getElementById("colors4")
            let c5 = document.getElementById("colors5")
            let let1 = document.getElementById("l1")
            let let2 = document.getElementById("l2")
            let let3 = document.getElementById("l3")
            let let4 = document.getElementById("l4")
            let let5 = document.getElementById("l5")
            const response = await fetch(`http://127.0.0.1:8080/wordfinder?l1=${let1.value}&colors1=${c1.value}&l2=${let2.value}&colors2=${c2.value}&l3=${let3.value}&colors3=${c3.value}&l4=${let4.value}&colors4=${c4.value}&l5=${let5.value}&colors5=${c5.value}`)
            const data = await response.json()
            let counter_span = document.getElementById("words")
            counter_span.innerHTML = data.words;
        }    
    </script>
</body>
</html>